<h1>
    Question Edit Page
</h1>


<%= form_with(model: @question) do |form|%>

<div class="form-group">
    <%= form.label :title  %>
    
    <%= form.text_field :title ,class:"form-text" , autofocus: true   %>
</div>
<div class="form-group">
    <%= form.label :body%>
    <br>
    <%= form.text_area :body, cols: 50, rows: 5 ,class:"form-text"    %>
</div>
<%= form.submit %>

<% end%>