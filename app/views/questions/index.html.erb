<h1>
    Question Index Page
</h1>

<% if @tag.present? %>
    <h2>Showing Questions tagged by: 
        <span class="badge badge-pill badge-primary"><%= @tag.name %></span>
    </h2>
<% end%>

<% @questions.each do |question|%>
    <div>
        <h3>

        <%# question.title%>
        <h2><%= link_to(question.title, question_path(question.id)) %></h2>
        </h3>
        <p>
        <%= question.body%>
        </p>
    </div>
<% end %>